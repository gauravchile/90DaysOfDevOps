pipeline {
    agent any

    parameters {
        choice(name: 'TARGET_ENV', choices: ['dev', 'staging', 'prod'], description: 'Target environment')
        string(name: 'APP_VERSION', defaultValue: '1.0.0', description: 'Application version')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                sh "docker build -t sample-app:${params.APP_VERSION} ."
            }
        }

        stage('Test') {
            steps {
                sh 'echo "Running unit tests..."'
            }
        }

        stage('Vulnerability Scan') {
            steps {
                sh "trivy image sample-app:${params.APP_VERSION} --severity HIGH,CRITICAL"
            }
        }

        stage('Deploy') {
            steps {
                sh """
                echo "Deploying version ${params.APP_VERSION} to ${params.TARGET_ENV}"
                docker run -d -p 8080:80 sample-app:${params.APP_VERSION}
                """
            }
        }
    }

    post {
        success {
            echo "Build Successful"
        }
        failure {
            echo "Build Failed"
        }
        always {
            cleanWs()
        }
    }
}
